<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="fill_parent"
        android:layout_height="60px"
        android:id="@+id/space" />

    <Button
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:id="@+id/btnClienteMain"
        android:onClick="onClick"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:layout_below="@+id/btnFornecedorMain"
        android:layout_alignLeft="@+id/btnProdutoMain"
        android:layout_alignStart="@+id/btnProdutoMain"
        android:layout_alignRight="@+id/btnProdutoMain"
        android:layout_alignEnd="@+id/btnProdutoMain" />

    <Button
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Produto"
                android:id="@+id/btnProdutoMain"
                android:onClick="onClick"
                android:layout_column="5"
                android:layout_row="2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnClienteMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VENDER"
        android:id="@+id/btnVenderMain"
        android:onClick="onClick"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:layout_below="@+id/btnProdutoMain"
        android:layout_alignLeft="@+id/btnProdutoMain"
        android:layout_alignStart="@+id/btnProdutoMain"
        android:layout_alignRight="@+id/btnProdutoMain"
        android:layout_alignEnd="@+id/btnProdutoMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fornecedor"
        android:id="@+id/btnFornecedorMain"
        android:onClick="onClick"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:layout_below="@+id/space"
        android:layout_marginTop="31dp"
        android:layout_alignLeft="@+id/btnClienteMain"
        android:layout_alignStart="@+id/btnClienteMain"
        android:layout_alignRight="@+id/btnClienteMain"
        android:layout_alignEnd="@+id/btnClienteMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPRAR"
        android:id="@+id/btnComprarMain"
        android:onClick="onClick"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:layout_below="@+id/btnVenderMain"
        android:layout_alignRight="@+id/btnVenderMain"
        android:layout_alignEnd="@+id/btnVenderMain"
        android:layout_alignLeft="@+id/btnVenderMain"
        android:layout_alignStart="@+id/btnVenderMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RELATORIOS"
        android:id="@+id/btnRelatoriosMain"
        android:onClick="onClick"
        android:layout_column="5"
        android:layout_row="7"
        android:layout_below="@+id/btnComprarMain"
        android:layout_alignLeft="@+id/btnComprarMain"
        android:layout_alignStart="@+id/btnComprarMain"
        android:layout_alignRight="@+id/btnComprarMain"
        android:layout_alignEnd="@+id/btnComprarMain" />

</RelativeLayout>
